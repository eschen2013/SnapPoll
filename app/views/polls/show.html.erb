<div class="row">
  <div class="col-xs-12 col-md-9">
    <div class="panel panel-primary">

      <div class="panel-heading">
        <div class="media">
          <%= image_tag href="http://graph.facebook.com/#{@poll.user.uid}/picture?width=25&redirect=1&type=square&height=25", class: "media-object img-rounded pull-left"%>
          <div class="media-body">
            <b><%=@poll.user.first_name%> wants to know...</b>
          </div>
        </div>
      </div>

      <div class="panel-body row">
        <div class="col-xs-3">
          <%= image_tag "cat-wins.gif", class: "img-responsive img-rounded" %>
        </div>
        <div class="col-xs-9">
          <%= @poll.body %>  
        </div>
      </div>

      <div class="list-group">
        <% @poll.answers.each do |answer| %>
          <a href="#" class="list-group-item">
            <div class="row">
              <div class="col-xs-3">
                <%= image_tag "loser.gif", class: "img-responsive img-rounded" %>
              </div>
              <div class="col-xs-9">
                <%= answer.body %>
              </div>
            </div>
            <p>Results: </p>
          </a>
        <% end %>
      </div>

    </div>
  </div>
</div>
