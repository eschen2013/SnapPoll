<div class="row">
  <div class="col-xs-12 col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        I want to know...
      </div>

      <div class="panel-body row">
        <div class="col-xs-4">
          <%= image_tag "cat-wins.gif", class: "img-responsive" %>
        </div>
        <div class="col-xs-8">
          <%= @poll.body %>  
        </div>
      </div>

      <div class="list-group">
        <% @poll.answers.each do |answer| %>
          <div class="list-group-item">
            <div class="row">
              <div class="col-xs-4">
                <%= image_tag "loser.gif", class: "img-responsive" %>
              </div>
              <div class="col-xs-8">
                <%= answer.body %>
              </div>
            </div>
            <p>Results: </p>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
